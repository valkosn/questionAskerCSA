<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/mvc
	   http://www.springframework.org/schema/mvc/spring-mvc.xsd">


    <!-- Static Resources Configuration (get access to static sources such as CSS and JavaScript files) -->
    <mvc:resources mapping="/resources/**" location="/resources/"/>
    <!-- themes can be put in different folder such as
        <mvc:resources mapping="/resources/**" location="/resources/themeBlue" />
        <mvc:resources mapping="/resources/**" location="/resources/themeGreen" />
     -->

    <!-- DAO Beans -->

    <bean id="db_initializer" class="com.asker.utils.DBInitializerImpl" init-method="init">
        <constructor-arg name="filePath" value="../../resources/db/QuestionsDB.json"/>
        <constructor-arg name="connectionProvider" ref="connection_provider"/>
        <property name="categoryService" ref="category_service"/>
        <property name="qaService" ref="qa_service"/>
    </bean>

    <!--<bean id="qa_dao" class="com.asker.dao.QaDaoFileDB" init-method="init">-->
    <!--<constructor-arg value="../../resources/db/QuestionsDB.json"/>-->
    <!--</bean>-->

    <bean id="qa_dao" class="com.asker.dao.QaDaoJdbc">
        <constructor-arg name="connectionProvider" ref="connection_provider"/>
    </bean>

    <!--<bean id="category_dao" class="com.asker.dao.CategoryDaoJdbc">-->
        <!--<property name="connection" ref="connection_provider"/>-->
        <!--<property name="qaService" ref="qa_service"/>-->
    <!--</bean>-->

    <!--<bean id="category_dao" class="com.asker.dao.CategoryDaoJpa">-->
        <!--<property name="qaService" ref="qa_service"/>-->
    <!--</bean>-->

    <!-- Service Beans -->

    <bean id="qa_service" class="com.asker.service.QaServiceImpl">
        <property name="qaDAO" ref="qa_dao"/>
    </bean>

    <bean id="category_service" class="com.asker.service.CategoryServiceImpl">
        <property name="categoryDAO" ref="categoryDaoJpa"/>
    </bean>

    <!-- Other Beans-->

    <bean id="console_renderer" class="com.asker.ConsoleRenderer">
        <property name="qaService" ref="qa_service"/>
    </bean>

    <bean id="settings" class="com.asker.service.Settings">
        <constructor-arg value="askerDB.properties"/>
    </bean>

    <bean id="connection_provider" class="com.asker.utils.PostgresConnectionProvider">
        <constructor-arg name="settings" ref="settings"/>
    </bean>

</beans>